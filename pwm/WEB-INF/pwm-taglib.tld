<!DOCTYPE taglib
        PUBLIC "-//Sun Microsystems, Inc.//DTD JSP Tag Library 1.2//EN"
        "http://java.sun.com/dtd/web-jsptaglibrary_1_2.dtd">
<taglib>
    <tlib-version>1.2</tlib-version>
    <jsp-version>1.2</jsp-version>
    <short-name>pwm-taglib</short-name>
    <tag>
        <name>ErrorMessage</name>
        <tag-class>password.pwm.tag.ErrorMessageTag</tag-class>
        <body-content>empty</body-content>
        <description>Displays the current error message (if any)</description>
    </tag>
    <tag>
        <name>SuccessMessage</name>
        <tag-class>password.pwm.tag.SuccessMessageTag</tag-class>
        <body-content>empty</body-content>
        <description>Displays the current success message (if any)</description>
    </tag>
    <tag>
        <name>ParamValue</name>
        <tag-class>password.pwm.tag.ParamValueTag</tag-class>
        <body-content>empty</body-content>
        <description>Retreives the last user-supplied value</description>
        <attribute>
            <name>name</name>
            <required>true</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>DisplayLocationOptions</name>
        <tag-class>
            password.pwm.tag.DisplayLocationOptionsTag
        </tag-class>
        <body-content>empty</body-content>
        <description>Shows the list of ldap contexts available during a
            login
        </description>
        <attribute>
            <name>name</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>UserInfo</name>
        <tag-class>password.pwm.tag.UserInfoTag</tag-class>
        <body-content>empty</body-content>
        <description>Retreives attributes from the logged-in user's ldap
            entry
        </description>
        <attribute>
            <name>attribute</name>
            <required>true</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>DisplayPasswordRequirements</name>
        <tag-class>
            password.pwm.tag.PasswordRequirementsTag
        </tag-class>
        <body-content>empty</body-content>
        <description>Displays (in english) selected currently configured
            password requirements
        </description>
        <attribute>
            <name>separator</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
        <attribute>
            <name>prepend</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
        <attribute>
            <name>form</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>Display</name>
        <tag-class>password.pwm.tag.DisplayTag</tag-class>
        <body-content>empty</body-content>
        <description>Display localized message</description>
        <attribute>
            <name>key</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>bundle</name>
            <required>false</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
        <attribute>
            <name>value1</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>value2</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
        <attribute>
            <name>displayIfMissing</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>LdapValue</name>
        <tag-class>password.pwm.tag.LdapValueTag</tag-class>
        <body-content>empty</body-content>
        <description>Retrieves the attribute value for the user from ldap</description>
        <attribute>
            <name>name</name>
            <required>true</required>
            <rtexprvalue>false</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>url</name>
        <tag-class>password.pwm.tag.URLRewriter</tag-class>
        <body-content>empty</body-content>
        <description>Rewrite/Encode outbound URLs</description>
        <attribute>
            <name>url</name>
            <required>true</required>
            <rtexprvalue>true</rtexprvalue>
        </attribute>
    </tag>
    <tag>
        <name>FormID</name>
        <tag-class>password.pwm.tag.PwmFormIDTag</tag-class>
        <body-content>empty</body-content>
        <description>Displays the proper pwmFormID value for the session</description>
    </tag>
    <tag>
        <name>LocaleOrientation</name>
        <tag-class>password.pwm.tag.LocaleOrientationTag</tag-class>
        <body-content>empty</body-content>
        <description>Output text "rtl" or "ltr" depending on session locale</description>
    </tag>
    <tag>
        <name>ThemeURL</name>
        <tag-class>password.pwm.tag.ThemeUrlTag</tag-class>
        <body-content>empty</body-content>
        <description>Output the name of the active theme</description>
        <attribute>
            <name>type</name>
            <required>false</required>
            <rtexprvalue>true</rtexprvalue>
            <description>"mobile" for the mobile CSS stylesheet, otherwise not required.</description>
        </attribute>
    </tag>
</taglib>


